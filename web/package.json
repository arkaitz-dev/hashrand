{
	"name": "hashrand-web",
	"private": true,
	"version": "0.27.8",
	"description": "Professional web interface for HashRand API - hash, password, and API key generator",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "npm run format:check && VITE_LINT_ONLY=true vite build --mode development",
		"lint:legacy": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test:e2e": "playwright test e2e/",
		"test:e2e:ui": "playwright test e2e/ --ui",
		"test:e2e:debug": "playwright test e2e/ --debug",
		"test:api": "playwright test api/",
		"test:api:verbose": "playwright test api/ --reporter=list",
		"test:all": "playwright test",
		"test:report": "playwright show-report tests/playwright-report",
		"test:install": "playwright install chromium"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.2.3",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vite-plugin-eslint": "^1.8.1"
	},
	"dependencies": {
		"@noble/ciphers": "^2.0.0",
		"@noble/curves": "^2.0.0",
		"@noble/hashes": "^2.0.0",
		"@scure/base": "^2.0.0",
		"@sveltejs/adapter-static": "^3.0.9"
	},
	"keywords": [
		"hash-generator",
		"password-generator",
		"api-key-generator",
		"svelte",
		"sveltekit",
		"typescript",
		"tailwindcss",
		"spa",
		"frontend",
		"web-interface"
	],
	"author": "HashRand",
	"license": "MIT"
}
